<% content_for :title, "Detalhes da Pessoa" %>

<div class="max-w-3xl mx-auto my-10">
 
  <% if notice.present? %>
    <div class="mb-8 p-5 bg-gradient-to-r from-emerald-50 to-green-50 border border-emerald-200 rounded-xl shadow-sm animate-fade-in">
      <div class="flex items-center gap-3">
        <div class="p-1.5 bg-emerald-100 rounded-lg">
          <svg class="w-4 h-4 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
        </div>
        <p class="text-emerald-800 font-medium"><%= notice %></p>
      </div>
    </div>
  <% end %>

 
  <div class="bg-white rounded-xl shadow-lg border border-gray-200 hover:shadow-xl transition-shadow duration-300">
    
    <div class="px-8 py-6 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-lg shadow-sm">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Detalhes da Pessoa</h1>
            <p class="text-gray-500 text-sm mt-1">Informações completas sobre <%= @pessoa.nome %></p>
          </div>
        </div>
        
        <div class="flex items-center gap-2">
          <%= link_to pessoas_path, 
                class: "group inline-flex items-center gap-2 px-4 py-2.5 border border-gray-300 hover:bg-gray-50 text-gray-700 rounded-lg font-medium transition-all duration-200 hover:border-gray-400" do %>
            <svg class="w-5 h-5 group-hover:-translate-x-0.5 transition-transform" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
            </svg>
            Voltar para lista
          <% end %>
        </div>
      </div>
    </div>

   
    <div class="p-8">
      <div class="space-y-10">
      
        <div class="space-y-4">
          <div class="flex items-start gap-4 p-4 bg-gradient-to-r from-indigo-50 to-blue-50 rounded-xl border border-indigo-100">
            <div class="p-3 bg-white rounded-lg shadow-sm">
              <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-700 mb-2">Nome completo</p>
              <p class="text-xl font-semibold text-gray-900"><%= @pessoa.nome %></p>
              <div class="flex items-center gap-2 mt-3">
                <span class="inline-flex items-center gap-1 px-2 py-1 bg-indigo-100 text-indigo-800 text-xs font-medium rounded-lg">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 000 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                  </svg>
                  Pessoa cadastrada
                </span>
              </div>
            </div>
          </div>
        </div>

     
        <div>
          <div class="flex items-center gap-2 mb-6">
            <div class="p-2 bg-gray-100 rounded-lg">
              <svg class="w-4 h-4 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Contato e Documentos</h3>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
           
            <div class="group p-5 bg-gradient-to-br from-gray-50 to-white rounded-xl border border-gray-200 hover:border-emerald-300 transition-all duration-200">
              <div class="flex items-center gap-3">
                <div class="p-2.5 bg-gradient-to-br from-emerald-100 to-green-100 rounded-lg">
                  <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-700 mb-1">Telefone</p>
                  <p class="text-lg font-semibold text-gray-900"><%= format_telefone(@pessoa.telefone) %></p>
                  <div class="flex items-center gap-1 mt-2">
                    <svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-xs text-gray-500">Contato principal</span>
                  </div>
                </div>
              </div>
            </div>

          
            <div class="group p-5 bg-gradient-to-br from-gray-50 to-white rounded-xl border border-gray-200 hover:border-blue-300 transition-all duration-200">
              <div class="flex items-center gap-3">
                <div class="p-2.5 bg-gradient-to-br from-blue-100 to-indigo-100 rounded-lg">
                  <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-700 mb-1">CPF</p>
                  <p class="text-lg font-semibold text-gray-900 font-mono"><%= format_cpf(@pessoa.cpf) %></p>
                  <div class="flex items-center gap-1 mt-2">
                    <svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-xs text-gray-500">Documento único</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

       
        <div>
          <div class="flex items-center gap-2 mb-6">
            <div class="p-2 bg-gray-100 rounded-lg">
              <svg class="w-4 h-4 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Informações do Cadastro</h3>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            
            <div class="group p-5 bg-gradient-to-br from-gray-50 to-white rounded-xl border border-gray-200 hover:border-purple-300 transition-all duration-200">
              <div class="flex items-center gap-3">
                <div class="p-2.5 bg-gradient-to-br from-purple-100 to-pink-100 rounded-lg">
                  <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-700 mb-1">Cadastrada em</p>
                  <p class="text-lg font-semibold text-gray-900"><%= l(@pessoa.created_at, format: :long) %></p>
                  <p class="text-xs text-gray-500 mt-1">
                    Há <%= time_ago_in_words(@pessoa.created_at) %>
                  </p>
                </div>
              </div>
            </div>

          </div>
        </div>

      
        <% if @pessoa.acessos.any? %>
          <div>
            <div class="flex items-center gap-2 mb-6">
              <div class="p-2 bg-gray-100 rounded-lg">
                <svg class="w-4 h-4 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z" clip-rule="evenodd"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Acessos Registrados</h3>
            </div>

            <div class="group p-5 bg-gradient-to-br from-gray-50 to-white rounded-xl border border-gray-200 hover:border-green-300 transition-all duration-200">
              <div class="flex items-center gap-3">
                <div class="p-2.5 bg-gradient-to-br from-green-100 to-emerald-100 rounded-lg">
                  <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-.293.707L10 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V4z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="text-sm font-medium text-gray-700 mb-1">Histórico de Acessos</p>
                      <p class="text-lg font-semibold text-gray-900">
                        <%= @pessoa.acessos.count %> acesso(s) registrado(s)
                      </p>
                    </div>
                    <%= link_to acessos_path(query: @pessoa.nome),
                          class: "inline-flex items-center gap-1 px-3 py-1.5 bg-blue-50 text-blue-700 text-sm font-medium rounded-lg hover:bg-blue-100 transition-colors" do %>
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                      </svg>
                      Ver acessos
                    <% end %>
                  </div>
                  
                 
                  <% acessos_abertos = @pessoa.acessos.where(saida: nil).count %>
                  <% acessos_finalizados = @pessoa.acessos.where.not(saida: nil).count %>
                  
                  <div class="flex items-center gap-4 mt-4">
                    <div class="flex items-center gap-2">
                      <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                      <span class="text-sm text-gray-600">
                        <%= acessos_finalizados %> finalizado(s)
                      </span>
                    </div>
                    <div class="flex items-center gap-2">
                      <div class="w-2 h-2 bg-amber-500 rounded-full"></div>
                      <span class="text-sm text-gray-600">
                        <%= acessos_abertos %> em aberto
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <div class="group p-5 bg-gradient-to-br from-gray-50 to-white rounded-xl border border-gray-200">
            <div class="flex items-center gap-3">
              <div class="p-2.5 bg-gray-100 rounded-lg">
                <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-.293.707L10 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-700 mb-1">Histórico de Acessos</p>
                <p class="text-gray-600">Nenhum acesso registrado para esta pessoa</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="pt-8 mt-8 border-t border-gray-100">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
          <div class="text-sm text-gray-500">
            Última atualização: <%= time_ago_in_words(@pessoa.updated_at) %>
          </div>
          
          <div class="flex flex-wrap gap-3">
            <%= link_to edit_pessoa_path(@pessoa),
                  class: "group inline-flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white rounded-lg font-medium transition-all duration-200 shadow-sm hover:shadow" do %>
              <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
              </svg>
              Editar Pessoa
            <% end %>

            <%= button_to @pessoa,
                  method: :delete,
                  data: { 
                    turbo_confirm: "Tem certeza que deseja excluir #{@pessoa.nome}? Esta ação não pode ser desfeita e excluirá também todos os acessos associados." 
                  },
                  class: "group inline-flex items-center gap-2 px-5 py-3 border border-red-300 hover:bg-red-50 text-red-700 hover:text-red-800 rounded-lg font-medium transition-all duration-200 hover:border-red-400" do %>
              <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              Excluir Pessoa
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
@keyframes fade-in {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in {
  animation: fade-in 0.3s ease-out;
}
</style>