<% content_for :title, "Pessoas" %>

<div class="w-full space-y-6">
  <!-- Notificações -->
  <% if notice.present? %>
    <div class="p-4 bg-gradient-to-r from-emerald-50 to-green-50 border border-emerald-200 rounded-xl shadow-sm animate-fade-in">
      <div class="flex items-center gap-3">
        <div class="p-1.5 bg-emerald-100 rounded-lg">
          <svg class="w-4 h-4 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
        </div>
        <p class="text-emerald-800 font-medium"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <% if alert.present? %>
    <div class="p-4 bg-gradient-to-r from-red-50 to-rose-50 border border-red-200 rounded-xl shadow-sm animate-fade-in">
      <div class="flex items-center gap-3">
        <div class="p-1.5 bg-red-100 rounded-lg">
          <svg class="w-4 h-4 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <p class="text-red-800 font-medium"><%= alert %></p>
      </div>
    </div>
  <% end %>

  <!-- Cabeçalho -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div>
      <div class="flex items-center gap-3">
        <div class="p-2.5 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-xl shadow-sm">
          <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Pessoas</h1>
          <p class="text-gray-600 mt-1">Gerencie o cadastro de pessoas para controle de acessos</p>
        </div>
      </div>
    </div>

    <%= link_to new_pessoa_path,
      class: "group inline-flex items-center justify-center gap-2 px-4 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white rounded-lg font-medium transition-all duration-200 shadow-sm hover:shadow-md w-full md:w-auto" do %>
      <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
      </svg>
      Nova Pessoa
    <% end %>
  </div>

  <!-- Formulário de busca -->
  <div class="bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow duration-200" data-controller="filter">
    <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
      <div class="flex items-center gap-3">
        <div class="p-2 bg-gray-100 rounded-lg">
          <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-semibold text-gray-900">Buscar Pessoas</h2>
          <p class="text-gray-500 text-sm mt-1">Encontre pessoas por nome, telefone ou CPF</p>
        </div>
      </div>
    </div>

    <div class="p-6">
      <%= form_with url: pessoas_path, method: :get,
            data: { turbo_frame: "pessoas", filter_target: "form" },
            class: "w-full" do %>
        <div class="relative group">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-blue-600 transition-colors" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
            </svg>
          </div>
          <input type="text"
                 name="query"
                 value="<%= params[:query] %>"
                 placeholder="Digite nome, telefone ou CPF para buscar..."
                 class="block w-full pl-10 pr-10 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition-all duration-200 hover:border-gray-400"
                 data-action="input->filter#submitDebounced keyup->filter#submitDebounced"
                 data-filter-target="input">
          <% if params[:query].present? %>
            <button type="button"
                    data-action="click->filter#clear"
                    class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 focus:outline-none transition-colors"
                    title="Limpar busca">
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Lista de pessoas -->
  <%= turbo_frame_tag "pessoas" do %>
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="p-2 bg-gray-100 rounded-lg">
              <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Lista de Pessoas</h3>
              <p class="text-gray-500 text-sm mt-1">
                <% if params[:query].present? %>
                  <%= @pessoas.total_count %> resultado(s) encontrado(s)
                <% else %>
                  Todas as pessoas cadastradas
                <% end %>
              </p>
            </div>
          </div>
          
          <div class="text-sm font-medium text-gray-700">
            <span class="inline-flex items-center gap-1 px-3 py-1.5 bg-blue-50 text-blue-700 rounded-lg">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-.293.707L10 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V4z" clip-rule="evenodd"/>
              </svg>
              <%= @pessoas.total_count %> total
            </span>
          </div>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full min-w-[640px]">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                  </svg>
                  Nome
                </div>
              </th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                  </svg>
                  Telefone
                </div>
              </th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  CPF
                </div>
              </th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
                  </svg>
                  Ações
                </div>
              </th>
            </tr>
          </thead>

          <tbody class="divide-y divide-gray-200">
            <% if @pessoas.any? %>
              <% @pessoas.each_with_index do |pessoa, index| %>
                <tr class="<%= index.even? ? 'bg-white' : 'bg-gray-50/50' %> hover:bg-gray-100 transition-colors duration-150">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <div class="flex-shrink-0">
                        <div class="w-10 h-10 bg-gradient-to-br from-blue-100 to-blue-200 rounded-lg flex items-center justify-center shadow-sm">
                          <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                          </svg>
                        </div>
                      </div>
                      <div>
                        <p class="text-sm font-semibold text-gray-900"><%= pessoa.nome %></p>
                        <p class="text-xs text-gray-500 mt-0.5">ID: <%= pessoa.id %></p>
                      </div>
                    </div>
                  </td>
                  
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-2">
                      <div class="p-1.5 bg-green-50 rounded-md">
                        <svg class="w-3.5 h-3.5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                        </svg>
                      </div>
                      <p class="text-sm font-medium text-gray-900"><%= format_telefone(pessoa.telefone) %></p>
                    </div>
                  </td>
                  
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-2">
                      <div class="p-1.5 bg-purple-50 rounded-md">
                        <svg class="w-3.5 h-3.5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                      </div>
                      <p class="text-sm font-mono font-medium text-gray-900"><%= format_cpf(pessoa.cpf) %></p>
                    </div>
                  </td>
                                    
                  <td class="px-6 py-4">
                    <div class="flex items-center space-x-2">
                      <%= link_to pessoa_path(pessoa),
                            data: { turbo: false },
                            class: "group p-2 bg-gradient-to-br from-gray-50 to-gray-100 hover:from-blue-50 hover:to-blue-100 text-gray-400 hover:text-blue-600 rounded-lg border border-gray-200 hover:border-blue-300 transition-all duration-200",
                            title: "Ver detalhes" do %>
                        <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                        </svg>
                      <% end %>

                      <%= link_to edit_pessoa_path(pessoa),
                            data: { turbo: false },
                            class: "group p-2 bg-gradient-to-br from-gray-50 to-gray-100 hover:from-green-50 hover:to-green-100 text-gray-400 hover:text-green-600 rounded-lg border border-gray-200 hover:border-green-300 transition-all duration-200",
                            title: "Editar" do %>
                        <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                        </svg>
                      <% end %>

                      <%= button_to pessoa_path(pessoa),
                            method: :delete,
                            data: { turbo_confirm: "Tem certeza que deseja excluir #{pessoa.nome}?" },
                            class: "group p-2 bg-gradient-to-br from-gray-50 to-gray-100 hover:from-red-50 hover:to-red-100 text-gray-400 hover:text-red-600 rounded-lg border border-gray-200 hover:border-red-300 transition-all duration-200",
                            title: "Excluir" do %>
                        <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="4" class="px-6 py-12">
                  <div class="text-center">
                    <div class="mx-auto w-16 h-16 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mb-4">
                      <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">
                      <% if params[:query].present? %>
                        Nenhuma pessoa encontrada
                      <% else %>
                        Nenhuma pessoa cadastrada
                      <% end %>
                    </h3>
                    <p class="text-gray-500 max-w-md mx-auto mb-4">
                      <% if params[:query].present? %>
                        Não encontramos resultados para "<span class="font-medium text-gray-700"><%= params[:query] %></span>"
                      <% else %>
                        Comece cadastrando uma nova pessoa no sistema.
                      <% end %>
                    </p>
                    <% unless params[:query].present? %>
                      <%= link_to new_pessoa_path,
                          class: "inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white rounded-lg font-medium transition-all duration-200" do %>
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
                        </svg>
                        Cadastrar primeira pessoa
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Paginação -->
      <% if @pessoas.any? %>
        <div class="px-6 py-4 border-t border-gray-200 bg-gradient-to-r from-gray-50 to-white flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div class="text-sm text-gray-700">
            <span class="inline-flex items-center gap-2">
              <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              Mostrando <span class="font-semibold mx-1"><%= @pessoas.offset_value + 1 %></span> a 
              <span class="font-semibold mx-1"><%= [@pessoas.offset_value + @pessoas.limit_value, @pessoas.total_count].min %></span> de 
              <span class="font-semibold mx-1"><%= @pessoas.total_count %></span> pessoas
            </span>
          </div>
          
          <div class="flex justify-center sm:justify-end">
            <%= paginate @pessoas, 
                  class: "inline-flex items-center rounded-lg shadow-sm",
                  params: { query: params[:query] } %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<style>
@keyframes fade-in {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in {
  animation: fade-in 0.3s ease-out;
}
</style>