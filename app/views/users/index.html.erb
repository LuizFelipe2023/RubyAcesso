<% content_for :title, "Usuários" %>
<div class="w-full space-y-6">
   <% if notice.present? %>
   <div class="p-4 bg-gradient-to-r from-blue-50 to-blue-100 border border-blue-200 rounded-xl shadow-sm">
      <div class="flex items-center gap-3">
         <svg class="w-5 h-5 text-blue-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
         </svg>
         <p class="text-blue-800 font-medium"><%= notice %></p>
      </div>
   </div>
   <% end %>
   
   <% if alert.present? %>
   <div class="p-4 bg-gradient-to-r from-red-50 to-red-100 border border-red-200 rounded-xl shadow-sm">
      <div class="flex items-center gap-3">
         <svg class="w-5 h-5 text-red-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
         </svg>
         <p class="text-red-800 font-medium"><%= alert %></p>
      </div>
   </div>
   <% end %>
   
   <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
         <div class="flex items-center gap-3">
            <div class="p-2 bg-gradient-to-br from-gray-900 to-gray-800 rounded-lg">
               <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
               </svg>
            </div>
            <div>
               <h1 class="text-2xl font-bold text-gray-900">Usuários</h1>
               <p class="text-gray-600 mt-1"><%= @users.total_count %> usuário(s) no sistema</p>
            </div>
         </div>
      </div>
      
      <%= link_to new_user_path,
         class: "group inline-flex items-center justify-center gap-2 px-4 py-3 bg-gradient-to-r from-gray-900 to-gray-800 hover:from-gray-800 hover:to-gray-700 text-white rounded-lg font-medium transition-all duration-200 shadow-sm hover:shadow-md w-full md:w-auto" do %>
         <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
         </svg>
         Novo Usuário
      <% end %>
   </div>
   
   <div class="bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow duration-200" data-controller="search-form-users">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
         <div class="flex items-center gap-3">
            <div class="p-2 bg-gray-100 rounded-lg">
               <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
               </svg>
            </div>
            <div>
               <h2 class="text-lg font-semibold text-gray-900">Buscar Usuários</h2>
               <p class="text-gray-500 text-sm mt-1">Filtre por email ou tipo de perfil</p>
            </div>
         </div>
      </div>
      
      <div class="p-6">
         <%= form_with url: users_path, method: :get, 
            data: { search_form_users_target: "form" },
            class: "space-y-4" do |f| %>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              
               <div class="relative group">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                     <svg class="h-5 w-5 text-gray-400 group-focus-within:text-gray-600 transition-colors" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
                     </svg>
                  </div>
                  
                  <%= text_field_tag :query, params[:query],
                     placeholder: "Buscar por email...",
                     class: "block w-full pl-10 pr-10 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-400 focus:border-gray-400 shadow-sm transition-all duration-200 hover:border-gray-400",
                     data: { 
                        search_form_users_target: "input",
                        action: "input->search-form-users#search"
                     } %>
                  
                  <% if params[:query].present? %>
                  <button type="button"
                     data-action="click->search-form-users#clear"
                     class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 transition-colors"
                     title="Limpar busca">
                     <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                     </svg>
                  </button>
                  <% end %>
               </div>
               
              
               <div class="relative group">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                     <svg class="h-5 w-5 text-gray-400 group-focus-within:text-gray-600 transition-colors" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/>
                     </svg>
                  </div>
                  
                  <%= select_tag :is_admin,
                     options_for_select([
                        ["Todos os perfis", ""],
                        ["Apenas Admins", "true"],
                        ["Apenas Usuários", "false"]
                     ], params[:is_admin]),
                     class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-400 focus:border-gray-400 shadow-sm transition-all duration-200 hover:border-gray-400 appearance-none",
                     data: { 
                        search_form_users_target: "select",
                        action: "change->search-form-users#search"
                     } %>
               </div>
            </div>
            
         
            <div class="flex flex-wrap items-center justify-between gap-3 pt-2 border-t border-gray-100">
               <div class="text-sm text-gray-500">
                  <% if params[:query].present? || params[:is_admin].present? %>
                     <span class="inline-flex items-center gap-1">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                           <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd"/>
                        </svg>
                        Filtros ativos
                     </span>
                  <% end %>
               </div>
               
               <div class="flex gap-2">
                  <button type="submit"
                     class="group inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-gray-900 to-gray-800 hover:from-gray-800 hover:to-gray-700 text-white rounded-lg font-medium transition-all duration-200 shadow-sm hover:shadow">
                     <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
                     </svg>
                     Buscar
                  </button>
                  
                  <% if params[:query].present? || params[:is_admin].present? %>
                  <%= link_to users_path, 
                     class: "inline-flex items-center gap-2 px-4 py-2 border border-gray-300 hover:bg-gray-50 text-gray-700 rounded-lg font-medium transition-all duration-200 hover:border-gray-400" do %>
                     <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                     </svg>
                     Limpar filtros
                  <% end %>
                  <% end %>
               </div>
            </div>
            
         <% end %>
      </div>
   </div>

   
   <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
         <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
               <div class="p-2 bg-gray-100 rounded-lg">
                  <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                     <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
                  </svg>
               </div>
               <div>
                  <h3 class="text-lg font-semibold text-gray-900">Lista de Usuários</h3>
                  <p class="text-gray-500 text-sm mt-1">
                     <% if params[:query].present? || params[:is_admin].present? %>
                        <%= @users.total_count %> resultado(s) encontrado(s)
                     <% else %>
                        Todos os usuários do sistema
                     <% end %>
                  </p>
               </div>
            </div>
            
            <div class="text-sm font-medium text-gray-700">
               <span class="inline-flex items-center gap-1">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                     <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1H8a3 3 0 00-3 3v1.5a1.5 1.5 0 01-3 0V6z" clip-rule="evenodd"/>
                     <path d="M6 12a2 2 0 012-2h8a2 2 0 012 2v2a2 2 0 01-2 2H2h2a2 2 0 002-2v-2z"/>
                  </svg>
                  <%= @users.total_count %> total
               </span>
            </div>
         </div>
      </div>
      
      <div class="overflow-x-auto">
         <table class="w-full min-w-[640px]">
            <thead class="bg-gray-50">
               <tr>
                  <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                     <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                           <path fill-rule="evenodd" d="M14.243 5.757a6 6 0 10-.986 9.284 1 1 0 111.087 1.678A8 8 0 1118 10a3 3 0 01-4.8 2.401A4 4 0 1114 10a1 1 0 102 0c0-1.537-.586-3.07-1.757-4.243zM12 10a2 2 0 10-4 0 2 2 0 004 0z" clip-rule="evenodd"/>
                        </svg>
                        Email
                     </div>
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                     <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                           <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        Perfil
                     </div>
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                     <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                           <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
                        </svg>
                        Ações
                     </div>
                  </th>
               </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
               <% if @users.any? %>
               <% @users.each_with_index do |user, index| %>
               <tr class="<%= index.even? ? 'bg-white' : 'bg-gray-50' %> hover:bg-gray-100 transition-colors duration-150">
                  <td class="px-6 py-4">
                     <div class="flex items-center gap-3">
                        <div class="p-2 bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg">
                           <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                           </svg>
                        </div>
                        <div>
                           <p class="text-gray-900 font-medium"><%= user.email_address %></p>
                           <p class="text-gray-500 text-xs mt-1">Cadastrado em <%= user.created_at.strftime("%d/%m/%Y") %></p>
                        </div>
                     </div>
                  </td>
                  
                  <td class="px-6 py-4">
                     <div class="flex items-center gap-2">
                        <span class="inline-flex items-center gap-1 px-3 py-1.5 rounded-full text-xs font-medium
                           <%= user.isAdmin ? 'bg-gradient-to-r from-red-50 to-red-100 text-red-700 border border-red-200' : 'bg-gradient-to-r from-gray-50 to-gray-100 text-gray-700 border border-gray-200' %>">
                           <% if user.isAdmin %>
                              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                 <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                              </svg>
                           <% else %>
                              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                 <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                              </svg>
                           <% end %>
                           <%= user.isAdmin ? "Administrador" : "Usuário Comum" %>
                        </span>
                     </div>
                  </td>
                  
                  <td class="px-6 py-4">
                     <div class="flex items-center space-x-1">
                        <%= link_to user_path(user),
                           class: "group p-2 bg-gradient-to-br from-gray-50 to-gray-100 hover:from-gray-100 hover:to-gray-200 text-gray-400 hover:text-blue-600 rounded-lg border border-gray-200 hover:border-blue-200 transition-all duration-200",
                           title: "Ver detalhes" do %>
                           <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                           </svg>
                        <% end %>
                        
                        <%= link_to edit_user_path(user),
                           class: "group p-2 bg-gradient-to-br from-gray-50 to-gray-100 hover:from-gray-100 hover:to-gray-200 text-gray-400 hover:text-green-600 rounded-lg border border-gray-200 hover:border-green-200 transition-all duration-200",
                           title: "Editar usuário" do %>
                           <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                           </svg>
                        <% end %>
                        
                        <% unless user == Current.user %>
                        <%= button_to user_path(user),
                           method: :delete,
                           data: { turbo_confirm: "Tem certeza que deseja excluir este usuário?" },
                           class: "group p-2 bg-gradient-to-br from-gray-50 to-gray-100 hover:from-gray-100 hover:to-gray-200 text-gray-400 hover:text-red-600 rounded-lg border border-gray-200 hover:border-red-200 transition-all duration-200",
                           title: "Excluir usuário" do %>
                           <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                           </svg>
                        <% end %>
                        <% end %>
                     </div>
                  </td>
               </tr>
               <% end %>
               <% else %>
               <tr>
                  <td colspan="3" class="px-6 py-12">
                     <div class="text-center">
                        <div class="mx-auto w-16 h-16 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mb-4">
                           <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
                           </svg>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">
                           <% if params[:query].present? || params[:is_admin].present? %>
                              Nenhum usuário encontrado
                           <% else %>
                              Nenhum usuário cadastrado
                           <% end %>
                        </h3>
                        <p class="text-gray-500 max-w-md mx-auto">
                           <% if params[:query].present? || params[:is_admin].present? %>
                              Tente ajustar os filtros de busca ou <%= link_to "limpe todos os filtros", users_path, class: "text-gray-900 hover:text-gray-700 underline font-medium" %>.
                           <% else %>
                              Comece cadastrando um novo usuário no sistema.
                           <% end %>
                        </p>
                     </div>
                  </td>
               </tr>
               <% end %>
            </tbody>
         </table>
      </div>
      
      
      <% if @users.any? %>
      <div class="px-6 py-4 border-t border-gray-200 bg-gradient-to-r from-gray-50 to-white flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
         <div class="text-sm text-gray-700">
            <span class="inline-flex items-center gap-1">
               <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
               </svg>
               Mostrando <span class="font-semibold mx-1"><%= @users.offset_value + 1 %></span> a
               <span class="font-semibold mx-1"><%= [@users.offset_value + @users.limit_value, @users.total_count].min %></span>
               de <span class="font-semibold mx-1"><%= @users.total_count %></span> usuários
            </span>
         </div>
         <div class="flex justify-center">
            <%= paginate @users, 
               params: { query: params[:query], is_admin: params[:is_admin] },
               class: "inline-flex items-center gap-1" %>
         </div>
      </div>
      <% end %>
   </div>
</div>