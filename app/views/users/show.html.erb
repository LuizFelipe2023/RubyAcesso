<% content_for :title, "Detalhes do Usuário" %>

<div class="max-w-3xl mx-auto my-10">

  <% if notice.present? %>
    <div class="mb-8 p-4 bg-blue-50 border border-blue-200 rounded-xl">
      <div class="flex items-center gap-3">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-blue-700"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <div class="bg-white rounded-xl shadow-lg border border-gray-200">

    <div class="px-8 py-6 border-b border-gray-100">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-gray-100 rounded-lg">
            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Detalhes do Usuário</h1>
            <p class="text-gray-500 text-sm mt-1">
              Informações completas de <%= @user.email_address %>
            </p>
          </div>
        </div>

        <%= link_to users_path,
              class: "inline-flex items-center gap-2 px-4 py-2.5 border border-gray-300 hover:bg-gray-50 text-gray-700 rounded-lg font-medium transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Voltar
        <% end %>
      </div>
    </div>

  
    <div class="p-8">
      <div class="space-y-8">

      
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <div class="p-3 bg-emerald-100 rounded-lg">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12"/>
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-700">Email</p>
                <p class="text-lg text-gray-900 mt-1"><%= @user.email_address %></p>
              </div>
            </div>
          </div>

          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <div class="p-3 bg-amber-100 rounded-lg">
                <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 11c0 .667-.333 2-2 2h4c-1.667 0-2-1.333-2-2z"/>
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-700">Perfil</p>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                  <%= @user.isAdmin ? 'bg-red-100 text-red-700' : 'bg-gray-100 text-gray-700' %>">
                  <%= @user.isAdmin ? "Administrador" : "Usuário comum" %>
                </span>
              </div>
            </div>
          </div>
        </div>

       
        <div class="pt-6 border-t border-gray-100">
          <div class="flex items-center gap-3">
            <div class="p-3 bg-gray-100 rounded-lg">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M8 7V3m8 4V3M3 11h18M5 21h14a2 2 0 002-2V9H3v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-700">Criado em</p>
              <p class="text-sm text-gray-600 mt-1">
                <%= l(@user.created_at, format: :long) %>
              </p>
            </div>
          </div>
        </div>

       
        <div class="pt-8 mt-8 border-t border-gray-100">
          <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
            <div class="text-sm text-gray-500">
              ID: #<%= @user.id %>
            </div>

            <div class="flex flex-wrap gap-3">
              <%= link_to edit_user_path(@user),
                    class: "inline-flex items-center gap-2 px-4 py-2.5 border border-gray-300 hover:bg-gray-50 text-gray-700 rounded-lg font-medium transition" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M11 5h2M12 5v14M5 12h14"/>
                </svg>
                Editar Usuário
              <% end %>

              <%= button_to @user,
                    method: :delete,
                    data: { turbo_confirm: "Tem certeza que deseja excluir este usuário?" },
                    class: "inline-flex items-center gap-2 px-4 py-2.5 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6"/>
                </svg>
                Excluir Usuário
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
